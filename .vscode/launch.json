    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'camigo'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=camigo"
                ],
                "filter": {
                    "name": "camigo",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test '01'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=01",
                    "--package=camigo"
                ],
                "filter": {
                    "name": "01",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'with_criterion'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=with_criterion",
                    "--package=camigo"
                ],
                "filter": {
                    "name": "with_criterion",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
